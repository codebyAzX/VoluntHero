<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#121212"
    android:paddingHorizontal="24dp">

    <com.google.android.material.progressindicator.LinearProgressIndicator
        android:id="@+id/progressBar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="54dp"
        app:indicatorColor="#7E57C2"
        app:trackColor="#1E1E1E"
        android:max="3"
        app:layout_constraintTop_toTopOf="parent" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="12dp"
        android:fillViewport="true"
        android:scrollbars="none"
        app:layout_constraintBottom_toTopOf="@id/layoutButtons"
        app:layout_constraintTop_toBottomOf="@id/progressBar">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tvStepTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#7E57C2"
                android:textStyle="bold"
                android:textSize="14sp"
                android:layout_marginBottom="16dp"/>

            <LinearLayout
                android:id="@+id/stepOrgMain"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:visibility="visible">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/org_name_title"
                    android:textColor="#FFF"
                    android:textSize="24sp"
                    android:textStyle="bold"
                    android:layout_marginBottom="24dp"/>

                <EditText
                    android:id="@+id/etOrgName"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="VoluntHero Team"
                    android:textColor="#FFF"
                    android:backgroundTint="#7E57C2"
                    android:textColorHint="#4DFFFFFF"
                    android:layout_marginBottom="32dp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/org_type_title"
                    android:textColor="#FFF"
                    android:textSize="18sp"
                    android:layout_marginBottom="16dp"/>

                <com.google.android.material.chip.ChipGroup
                    android:id="@+id/chipGroupOrgType"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:singleSelection="true"
                    app:chipSpacing="10dp" />

                <EditText
                    android:id="@+id/etOtherOrgType"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:hint="@string/other_org_hint"
                    android:textColor="#FFF"
                    android:backgroundTint="#7E57C2"
                    android:textSize="15sp"
                    android:textColorHint="#4DFFFFFF"/>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/stepOrgBio"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:visibility="gone">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/org_bio_title"
                    android:textColor="#FFF"
                    android:textSize="24sp"
                    android:textStyle="bold"
                    android:layout_marginBottom="24dp"/>

                <EditText
                    android:id="@+id/etOrgBio"
                    android:layout_width="match_parent"
                    android:layout_height="250dp"
                    android:hint="@string/org_bio_hint"
                    android:textColor="#FFF"
                    android:gravity="top"
                    android:background="@drawable/secondary_button_background"
                    android:padding="20dp"
                    android:textColorHint="#4DFFFFFF"/>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/stepOrgVerify"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:orientation="vertical"
                android:visibility="gone">

                <ImageView
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:src="@drawable/ic_email"
                    app:tint="#38FFD7" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:text="@string/org_verify_title"
                    android:textColor="#FFF"
                    android:textSize="32sp"
                    android:textStyle="bold"
                    android:gravity="center" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:text="@string/org_verify_desc"
                    android:textColor="#9E9E9E"
                    android:textSize="15sp"
                    android:gravity="center"
                    android:paddingHorizontal="24dp" />

                <EditText
                    android:id="@+id/etOrgWorkEmail"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="32dp"
                    android:hint="@string/work_email_hint"
                    android:textColor="#FFF"
                    android:inputType="textEmailAddress"
                    android:backgroundTint="#7E57C2"
                    android:textColorHint="#4DFFFFFF" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="12dp"
                    android:text="@string/email_code_hint"
                    android:textColor="#9E9E9E"
                    android:textSize="13sp"
                    android:gravity="center" />
            </LinearLayout>
        </LinearLayout>
    </ScrollView>

    <LinearLayout
        android:id="@+id/layoutButtons"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginBottom="32dp"
        app:layout_constraintBottom_toBottomOf="parent">

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btnBack"
            android:layout_width="0dp"
            android:layout_height="60dp"
            android:layout_weight="1"
            android:layout_marginEnd="16dp"
            android:text="@string/btn_back"
            android:textAllCaps="false"
            android:background="@drawable/secondary_button_background"
            android:textColor="#FFF"
            android:visibility="gone" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btnNext"
            android:layout_width="0dp"
            android:layout_height="60dp"
            android:layout_weight="2"
            android:text="@string/btn_next"
            android:textAllCaps="false"
            android:background="@drawable/gradient_button_background"
            android:textColor="#FFF"
            android:textStyle="bold" />
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>